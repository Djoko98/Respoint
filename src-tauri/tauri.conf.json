{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ResPoint",
  "version": "0.1.66",
  "identifier": "com.respoint.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ResPoint - Restaurant Management System",
        "width": 1280,
        "height": 800,
        "minWidth": 720,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "decorations": false,
        "transparent": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "nsis/installer-hooks.nsh"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZGMTM5NUI4Qzk2Mjk2MjgKUldRb2xtTEp1SlVULzFPalpDbmxvWm5HMU1CZGVXTmx6TUVTdHU5aEZ5elhoSDBJUW5TQnVFQi8K",
      "endpoints": [
        "https://raw.githubusercontent.com/Djoko98/Respoint/main/latest.json"
      ],
      "windows": {
        "installMode": "quiet"
      }
    }
  }
}